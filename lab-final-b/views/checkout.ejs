<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/checkout.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
<%- include('partials/header') %>

<div class="container mt-4 border p-4">
  <div class="checkout-steps text-center mb-4">
    <span class="step completed">Cart</span> →
    <span class="step active">Checkout</span> →
    <span class="step">Preview</span> →
    <span class="step">Done</span>
  </div>

  <div class="row g-4">
    <!-- Checkout Form -->
    <div class="col-md-7">
      <form id="checkoutForm">
        <h3>Shipping Address</h3>
        <div class="row g-3">
          <div class="col-md-6">
            <input type="text" class="form-control" id="fullName" placeholder="Full Name *">
          </div>
          <div class="col-md-6">
            <input type="email" class="form-control" id="email" placeholder="Email *">
          </div>
          <div class="col-md-6">
            <input type="tel" class="form-control" id="phone" placeholder="Phone *">
          </div>
          <div class="col-12">
            <input type="text" class="form-control" id="address" placeholder="Address *">
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control" id="city" placeholder="City *">
          </div>
          <div class="col-md-3">
            <input type="text" class="form-control" id="postal" placeholder="Postal Code *">
          </div>
          <div class="col-md-3">
            <select class="form-select" id="country">
              <option value="">Country *</option>
              <option>Pakistan</option>
              <option>USA</option>
              <option>UK</option>
            </select>
          </div>
        </div>

        <h4 class="mt-4">Payment Method</h4>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="payment" value="cod">
          <label class="form-check-label">Cash on Delivery</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="payment" value="card">
          <label class="form-check-label">Card</label>
        </div>

        <div class="form-check mt-3">
          <input class="form-check-input" type="checkbox" id="terms">
          <label class="form-check-label">I agree to terms *</label>
        </div>

        <div class="input-group mt-3">
          <input type="text" class="form-control" placeholder="Promo Code" id="couponCode" name="couponCode">
          <button class="btn btn-outline-secondary" type="button" onclick="applyCoupon()">Apply</button>
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100">
          Continue to Order Preview
        </button>
      </form>
    </div>

    <!-- Order Summary -->
    <div class="col-md-5">
      <h4>Order Summary</h4>
      <div class="border p-3" id="orderItems"></div>
      <div class="fw-bold mt-3">
        Total: Rs.<span id="totalCost">0</span>
      </div>
    </div>
  </div>
</div>

<footer class="mt-5">
  <%- include('partials/footer') %>
</footer>

<script>
$(document).ready(function () {
  // Load order summary
  function loadSummary() {
    const cart = JSON.parse(localStorage.getItem('cart')) || [];
    let total = 0;
    const div = document.getElementById('orderItems');
    div.innerHTML = '';

    cart.forEach(item => {
      total += item.price * item.quantity;
      div.innerHTML += `
        <div class="d-flex justify-content-between">
          <span>${item.name} x${item.quantity}</span>
          <span>Rs.${item.price * item.quantity}</span>
        </div>
      `;
    });

    document.getElementById('totalCost').innerText = total;
  }

  loadSummary();

  // Form submission
  $("#checkoutForm").on("submit", function(e) {
    e.preventDefault();
    let valid = true;
    $(".form-control, .form-check-input").removeClass("is-invalid is-valid");

    function invalidate(id) { $(id).addClass("is-invalid"); valid = false; }
    function validateLength(id, min) {
      if ($(id).val().trim().length < min) invalidate(id);
      else $(id).addClass("is-valid");
    }

    // VALIDATION
    validateLength("#fullName", 3);
    const emailPattern = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
    if (!emailPattern.test($("#email").val().trim())) invalidate("#email"); else $("#email").addClass("is-valid");
    const phonePattern = /^\d{10,}$/;
    if (!phonePattern.test($("#phone").val().trim())) invalidate("#phone"); else $("#phone").addClass("is-valid");
    if ($("#address").val().trim() === "") invalidate("#address"); else $("#address").addClass("is-valid");
    if ($("#city").val().trim() === "") invalidate("#city"); else $("#city").addClass("is-valid");
    const postalPattern = /^\d{4,6}$/;
    if (!postalPattern.test($("#postal").val().trim())) invalidate("#postal"); else $("#postal").addClass("is-valid");
    if ($("#country").val() === "") invalidate("#country"); else $("#country").addClass("is-valid");

    if (!$("input[name='payment']:checked").val()) { alert("Select payment method"); valid = false; }

    if (!$("#terms").is(":checked")) { $("#terms").addClass("is-invalid"); valid = false; }
    else $("#terms").addClass("is-valid");

    if (!valid) return;

    const cart = JSON.parse(localStorage.getItem('cart')) || [];
    if (!cart.length) { alert("Cart is empty"); return; }

    const data = {
      customer: {
        fullName: $("#fullName").val(),
        email: $("#email").val(),
        phone: $("#phone").val(),
        address: $("#address").val(),
        city: $("#city").val(),
        postal: $("#postal").val(),
        country: $("#country").val()
      },
      paymentMethod: $("input[name='payment']:checked").val(),
      cart,
      couponCode: $("#couponCode").val().trim() // send coupon code
    };

    // POST to server for order preview
    fetch("/order/preview", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    })
    .then(res => {
      if (res.ok) {
        window.location.href = "/order/preview"; // redirect to preview page
      } else {
        alert("Failed to go to order preview. Try again.");
      }
    })
    .catch(err => console.error(err));
  });
});
</script>

</body>
</html>
