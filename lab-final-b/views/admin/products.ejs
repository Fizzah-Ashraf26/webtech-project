<%- include('../partials/admin-header') %>

<div class="admin-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Products (<%= totalProducts %> total)</h3>
        <a href="/admin/products/add" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Product
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-admin">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr>
                    <td>
                        <% if (product.image) { %>
                            <img src="/images/<%= product.image %>" alt="<%= product.name %>" 
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 6px;">
                        <% } else { %>
                            <span class="text-muted">No Image</span>
                        <% } %>
                    </td>
                    <td><strong><%= product.name %></strong></td>
                    <td><span class="badge bg-secondary"><%= product.category %></span></td>
                    <td><strong>Rs.<%= product.price.toLocaleString() %></strong></td>
                    <td>
                        <span class="badge <%= product.stock > 0 ? 'bg-success' : 'bg-danger' %>">
                            <%= product.stock %>
                        </span>
                    </td>
                    <td>
                        <i class="fas fa-star text-warning"></i>
                        <%= product.rating %>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-warning" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-sm btn-danger delete-btn" data-id="<%= product._id %>" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script>
document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
        if (confirm('Delete this product? This cannot be undone.')) {
            try {
                const response = await fetch(`/admin/products/${btn.dataset.id}`, { method: 'DELETE' });
                if (response.ok) location.reload();
                else alert('Delete failed');
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
    });
});
</script>

<%- include('../partials/admin-footer') %>
