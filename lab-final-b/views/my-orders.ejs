<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Orders</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="container py-5">
      <h1 class="mb-4">View Your Orders</h1>

      <form method="POST" class="mb-4">
        <div class="row g-2">
          <div class="col-md-6">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Enter your email"
              value="<%= email %>"
              required
            />
          </div>
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
          </div>
        </div>
        <% if (error) { %>
        <p class="text-danger mt-2"><%= error %></p>
        <% } %>
      </form>

      <% if (orders && orders.length) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total (Rs.)</th>
            <th>Status</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td><%= new Date(order.createdAt).toLocaleString() %></td>
            <td>
              Rs.<%= order.discount ? order.discount.total : order.totalAmount
              %> <% if(order.discount){ %>
              <small class="text-success">(Discount applied)</small>
              <% } %>
            </td>
            <td><%= order.status %></td>
            <td>
              <a
                href="/order/success/<%= order._id %>"
                class="btn btn-sm btn-info"
                >View</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else if (orders) { %>
      <p>No orders found for <strong><%= email %></strong>.</p>
      <% } %>
    </div>

    <footer class="mt-5"><%- include('partials/footer') %></footer>
  </body>
</html>
